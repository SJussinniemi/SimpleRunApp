<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Simple_Run_App.HistoryPage"
             Title="History">

    <StackLayout x:Name="historyPage">
        <Button x:Name="DeleteBtn"
                    Text="Delate Exercise"
                    IsEnabled="False"
                    Clicked="DelateExer"
                    />
        <Entry x:Name="entryID"
                   Placeholder="Delete Code"
                   IsEnabled="False"
                   Keyboard="Numeric"/>

        <Button x:Name="BtnHistory"
                    Text="Exercise History"
                    Clicked="ShowHistory"/>
        <Label x:Name="NumElements"/>
    </StackLayout>
</ContentPage>